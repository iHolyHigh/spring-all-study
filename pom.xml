<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <licenses>
        <license>
            <name>Apache License, Version 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0</url>
            <distribution>repo</distribution>
        </license>
    </licenses>

    <scm>
        <connection>scm:git:git@github.com:iHolyHigh/spring-all-study.git</connection>
        <developerConnection>scm:git:git@github.com:iHolyHigh/spring-all-study.git</developerConnection>
        <url>https://github.com/iHolyHigh/logging-study</url>
        <tag>HEAD</tag>
    </scm>

    <developers>
        <developer>
            <id>holyhigh</id>
            <name>holyhigh</name>
            <email>huxutao1993@gmail.com</email>
        </developer>
    </developers>

    <groupId>com.holyhigh</groupId>
    <artifactId>spring-all-study</artifactId>
    <version>${revision}</version>
    <packaging>pom</packaging>

    <name>spring-all-study</name>
    <description>Spring全家桶学习</description>
    <url>https://github.com/iHolyHigh/logging-study</url>

    <modules>
        <module>spring-boot-study</module>
    </modules>

    <properties>
        <java.version>1.8</java.version>
        <revision>0.0.1-SNAPSHOT</revision>
        <spring-boot.version>2.6.2</spring-boot.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <dependencyManagement>
        <dependencies>
        </dependencies>
    </dependencyManagement>

    <dependencies>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>flatten-maven-plugin</artifactId>
                <version>1.1.0</version>
                <configuration>
                    <flattenMode>oss</flattenMode>
                    <updatePomFile>true</updatePomFile>
                </configuration>
                <executions>
                    <execution>
                        <id>flatten</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>flatten</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>flatten-clean</id>
                        <phase>clean</phase>
                        <goals>
                            <goal>clean</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
